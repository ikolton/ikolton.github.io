---
interface Project {
  title: string
  description: string
  stack?: string
  time?: string
  repo?: string
  demo?: string
  link?: string
}

import Layout from "@/layouts/Layout.astro";
import { projects } from "@/data/projects";
import { template } from "@/settings";

const ALL_PROJECTS = projects as Project[];
---

<Layout title="Projects">
  <div class="prose max-w-none">
    <h1 class="text-3xl font-bold mb-8">Projects</h1>

<p class="text-lg mb-10 text-base-content/80">
  A selection of my projects that combine software development and research — 
  from academic work to personal ideas I’ve explored in my free time. 
  You can find more smaller experiments and prototypes on my 
  <a href="https://github.com/ikolton" class="text-accent hover:underline">GitHub profile</a>.
</p>

    <div class="space-y-8">
      {
        ALL_PROJECTS.map((p) => (
          <div class="card bg-base-200 hover:bg-base-300 transition-colors">
            <div class="card-body">
              <h2 class="card-title text-xl">
                <a href={p.link || p.repo} class="hover:text-accent">
                  {p.title}
                </a>
              </h2>

              <p class="text-base mb-3">{p.description}</p>

              {p.stack && (
                <p class="text-sm text-base-content/70 mb-2">
                  <span class="font-medium">Tech Stack:</span> {p.stack}
                </p>
              )}

              {p.time && (
                <p class="text-sm italic text-base-content/60 mb-2">
                  {p.time}
                </p>
              )}

              <div class="card-actions justify-end mt-4 gap-2">
                {p.repo && (
                  <a
                    href={p.repo}
                    class="btn btn-sm btn-secondary text-secondary-content"
                  >
                    View on GitHub
                  </a>
                )}
                {p.demo && (
                  <a
                    href={p.demo}
                    class="btn btn-sm btn-secondary text-secondary-content"
                  >
                    Live Demo
                  </a>
                )}
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</Layout>
